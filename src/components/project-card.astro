---
import { Image } from 'astro:assets';

export interface Props {
  title: string;
  description: string;
  highlights: string[];
  imageSrc: string;
  tags: string[];
  demoLink: string;
  githubLink: string;
  platformSrc: ImageMetadata;
  platform: string;
}

const {
  title,
  description,
  highlights,
  imageSrc,
  tags,
  demoLink,
  githubLink,
  platformSrc,
  platform,
} = Astro.props;
---

<div class="project-card">
  <div class="project-panel">
    <div class="project-header">
      <div class="project-tab">
        <h3 class="text-dark">{title}</h3>
      </div>

      <div class="project-links">
        {
          demoLink && (
            <a
              href={demoLink}
              class="project-link button"
              target="_blank"
              rel="noopener noreferrer"
            >
              Live Site
            </a>
          )
        }

        <a href={githubLink} class="project-link button" target="_blank" rel="noopener noreferrer"
          >GitHub</a
        >
      </div>
    </div>

    <div class="project-info">
      <p>{description}</p>
      <ul>
        {highlights.map((item) => <li>{item}</li>)}
      </ul>
      <div class="project-tags">
        {tags.map((tag) => <span class="project-tag">{tag}</span>)}
      </div>
    </div>
  </div>
  <div class="project-panel">
    <div class="project-image">
      <Image src={platformSrc} alt={title} loading="lazy" />
    </div>
  </div>
</div>

<style>
  .project-panel {
    width: 50%;
  }

  .project-header {
    display: flex;
  }

  .project-card {
    background-color: white;
    color: black;
    border-radius: var(--border-radius);
    overflow: hidden;
    position: relative;
    display: flex;
    margin: 5rem 0;
  }

  .project-card:hover {
  }

  .project-tab {
    background-color: var(--light-gray);
    width: 250px;
    height: 4rem;
    border-bottom-right-radius: var(--border-radius);
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 2rem;
  }

  .project-image {
    height: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-image img {
    width: 60%;
    height: 60%;
    object-fit: cover;
    transition: transform var(--transition-speed) ease;
  }

  .project-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-info {
    padding: var(--space-xl);
  }

  .project-info h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .project-info p {
    color: black;
    margin-bottom: var(--space-md);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
  }

  .project-tag {
    border: 2px solid var(--primary-300);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
  }

  .project-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  @media (max-width: 768px) {
    .project-card {
      flex-direction: column;
    }
    .project-panel {
      width: 100%;
    }
    .project-header {
      flex-direction: column;
    }
  }
</style>
