---
import { Image } from 'astro:assets';

interface Props {
  src: ImageMetadata;
  alt: string;
  caption?: string;
  priority?: boolean;
  class?: string;
}

const { src, alt, caption, priority = false, class: className } = Astro.props;
---

<figure class="blog-figure">
  <Image
    src={src}
    alt={alt}
    class={`blog-image ${className || ''} ${''}`}
    loading={priority ? 'eager' : 'lazy'}
    fetchpriority={priority ? 'high' : 'auto'}
  />
  {caption && <figcaption>{caption}</figcaption>}
</figure>

<style>
  .blog-figure {
    margin: var(--space-xl) 0;
  }

  .blog-image {
    max-width: 100%;
    height: auto;
    border-radius: var(--border-radius-min);
    box-shadow: var(--box-shadow-light);
  }

  figcaption {
    font-style: italic;
    color: var(--text-color-muted);
    margin-top: var(--space-md);
    font-size: 0.9rem;
  }
</style>
