---
import ThemeSwitcher from './theme-switcher.astro';
---

<header>
  <nav>
    <div class="nav-container">
      <div class="logo">RB</div>
      <div class="nav-links">
        <a href="#home" class="nav-link hover-underline">Home</a>
        <a href="#about" class="nav-link hover-underline">About</a>
        <a href="#skills" class="nav-link hover-underline">Skills</a>
        <a href="#projects" class="nav-link hover-underline">Projects</a>
        <a href="#contact" class="nav-link hover-underline">Contact</a>
        <ThemeSwitcher />
      </div>
      <div class="hamburger-menu">
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
      </div>
    </div>
  </nav>
</header>

<script src="@scripts/header.ts"></script>

<style>
  header {
    position: fixed;
    top: 1rem;
    left: 50%;
    transform: translateX(-50%);
    width: 50%;
    z-index: 100;
    height: var(--nav-height);
    transition: background-color var(--transition-speed) ease-in-out;
    border-radius: var(--border-radius-md);
  }

  .scrolled-header {
    background-color: var(--background-translucent);
    backdrop-filter: blur(10px);
    border-bottom: 2px solid var(--background-alt);
  }

  .logo {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--text-color-primary);
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-xl);
    height: var(--nav-height);
  }

  .nav-links {
    display: flex;
    align-items: flex-end;
    gap: var(--space-xl);
    color: var(--text-color);
  }

  @media (max-width: 768px) {
    header {
      width: 90%;
    }
    .nav-links {
      display: none;
    }

    .nav-links.active {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      position: absolute;
      top: 120%;
      left: 0;
      width: 100%;
      box-sizing: border-box;
      background: linear-gradient(
        to left,
        var(--background) 40%,
        var(--background-translucent) 100%
      );
      padding: var(--space-xl);
      border-radius: var(--border-radius-md);
      font-size: var(--font-size-lg);
      box-shadow: var(--box-shadow-light);
    }

    /* Hamburger Menu Styles */
    .hamburger-menu {
      display: flex;
      flex-direction: column;
      gap: 6px;
      cursor: pointer;
    }

    .bar {
      width: 25px;
      height: 3px;
      background-color: var(--primary-color);
      transition: all 0.3s ease;
    }

    /* Create X Icon from menu bars when active */
    .hamburger-menu.active .bar:nth-child(1) {
      transform: translateY(9px) rotate(45deg);
    }

    .hamburger-menu.active .bar:nth-child(2) {
      opacity: 0;
    }

    .hamburger-menu.active .bar:nth-child(3) {
      transform: translateY(-9px) rotate(-45deg);
    }
  }

  @media (min-width: 769px) {
    .hamburger-menu {
      display: none;
    }
    header {
      width: 90%;
    }
  }

  @media (min-width: 1200px) {
    header {
      width: 50%;
    }
  }
</style>
