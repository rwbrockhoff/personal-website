---
import Section from '@components/global/section.astro';
import { workExperience } from '@data/work-experience.ts';
---

<Section id="experience" readableWidth>
  <h2>Experience</h2>
  {
    workExperience.map((role, index) => (
      <div class="role-item" style={`animation-delay: ${index * 0.2}s`}>
        <div class="role-content background-alt">
          <h4 class="role-title">{role.title}</h4>
          <p class="role-description">
            {role.company} â€¢ {role.duration}
          </p>
          <p class="role-main-description">{role.description}</p>

          <div class="role-expanded-content">
            <ul class="role-details">
              {role.details.map((detail) => (
                <li>{detail}</li>
              ))}
            </ul>
            <div class="role-tags">
              {role.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </div>
        </div>
      </div>
    ))
  }
</Section>

<style>
  @layer components {
    .role-item {
      position: relative;
      margin: var(--space-4) 0;
      opacity: 0;
      transform: translateY(30px);
      animation: fadeInUp 0.6s ease-in-out forwards;
    }

    .role-content {
      padding: var(--space-4);
      border-radius: var(--border-radius);
      transition: all var(--transition);
      overflow: hidden;
      cursor: pointer;
    }

    .role-content:hover {
      box-shadow: var(--shadow-primary);
    }

    .role-description {
      font-size: var(--font-size-4);
      color: var(--text-color-primary);
      margin: var(--space-1) 0;
      font-style: italic;
    }

    .role-main-description {
      margin-bottom: var(--space-3);
    }

    .role-expanded-content {
      max-height: 0;
      opacity: 0;
      overflow: hidden;
      transition:
        max-height 300ms ease-out,
        opacity 200ms ease-out;
    }

    .role-content:hover .role-expanded-content {
      max-height: 200px;
      opacity: 1;
    }

    .role-details {
      margin: var(--space-3) 0;
      padding-left: var(--space-4);
    }

    .role-details li {
      margin-bottom: var(--space-2);
      color: var(--text-color-secondary);
    }

    .role-tags {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-2);
      margin-top: var(--space-3);
    }

    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (max-width: 768px) {
      .role-expanded-content {
        max-height: none;
        opacity: 1;
      }

      .role-content {
        cursor: default;
      }
    }
  }
</style>
