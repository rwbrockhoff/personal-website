---
import { Image } from 'astro:assets';
import Status from './status.astro';
import Grid from '@components/layout/Grid.astro';
import Stack from '@components/layout/Stack.astro';
import Flex from '@components/layout/Flex.astro';
import profilePhoto from '@images/profile.png';
import { Github, User, BookOpen } from 'lucide-astro';
---

<section id="about">
  <div class="container">
    <h2 class="text-center">About Me</h2>
    <Grid gap="var(--space-12)" class="about-section">
      <div class="about-image">
        <Image src={profilePhoto} alt="Ryan Brockhoff, software engineer" />
      </div>
      
      <Stack gap="var(--space-6)">
        <Status message="Currently building Tidytrek" />
        
        <p class="about-text">
          I'm a full-stack software engineer focused on building scalable applications with
          thoughtful user experiences. With professional experience in React, Node.js, and cloud
          architecture, I create applications that perform well at scale while maintaining
          intuitive user interfaces. I enjoy the full development lifecycle - from system design
          and database modeling to responsive UI implementation. When I'm not coding, you can find
          me hiking, reading, or exploring emerging web technologies.
        </p>
        
        <Flex gap="var(--space-4)" wrap={true} class="about-links">
          <div class="hover-underline with-icon">
            <User aria-hidden="true" />
            <a
              href="https://www.linkedin.com/in/ryanbrockhoff/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Visit my LinkedIn profile">LinkedIn</a
            >
          </div>
          <div class="hover-underline with-icon">
            <Github aria-hidden="true" />
            <a
              href="https://github.com/rwbrockhoff/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Visit my Github profile">Github</a
            >
          </div>
          <div class="hover-underline with-icon">
            <BookOpen aria-hidden="true" />
            <a
              href="https://medium.com/@brockhoff"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Visit my Medium profile">Medium</a
            >
          </div>
        </Flex>
      </Stack>
    </Grid>
  </div>
</section>

<style>
  .about-section {
    margin-top: var(--space-8);
  }

  .about-image {
    display: flex;
    justify-content: center;
  }

  .about-image img {
    width: 12rem;
    height: auto;
    border-radius: 100%;
    box-shadow: var(--shadow-medium);
  }

  .about-text {
    font-size: var(--font-size-5);
    line-height: var(--line-height-relaxed);
    color: var(--text-color);
  }

  @media (max-width: 768px) {
    .about-section {
      text-align: center;
    }

    .about-links {
      justify-content: center;
    }

    .about-image img {
      width: 8rem;
    }
  }
</style>
