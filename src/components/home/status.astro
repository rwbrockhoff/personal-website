---
export interface Props {
  message: string;
}

const { message } = Astro.props;
---

<div class="status gap-2">
  <span class="status-dot"></span>
  {message}
</div>

<style>
  .status {
    display: flex;
    align-items: center;
    font-size: var(--font-size-4);
    font-weight: var(--font-weight-medium);
    color: var(--text-color);
    width: fit-content;
  }

  .status-dot {
    width: 12px;
    height: 12px;
    background-color: var(--primary-400);
    border-radius: 50%;
    position: relative;
    animation: pulse 1.5s infinite ease-in-out;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0px rgba(122, 132, 94, 0.6);
      transform: scale(1);
    }
    50% {
      box-shadow: 0 0 0 4px rgba(122, 132, 94, 0.3);
      transform: scale(1);
    }
    100% {
      box-shadow: 0 0 0 6px rgba(122, 132, 94, 0);
      transform: scale(1);
    }
  }

  @media (max-width: 768px) {
    .status {
      justify-content: center;
    }
  }
</style>
