---
export interface Props {
  message: string;
}

const { message } = Astro.props;
---

<div class="status">
  <span class="status-dot"></span>
  {message}
</div>

<style>
  .status {
    display: flex;
    align-items: center;
    font-size: 1rem;
    font-weight: bold;
    color: var(--text-color);
    margin: var(--space-sm) 0;
    font-style: italic;
    font-weight: 300;
  }

  .status-dot {
    width: 12px;
    height: 12px;
    background-color: #7a845e;
    border-radius: 50%;
    margin-right: 8px;
    box-shadow: 0 0 8px rgba(122, 132, 94, 0.8);
    position: relative;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 4px 0px rgba(122, 132, 94, 0.8);
      transform: scale(1);
    }
    50% {
      box-shadow: 0 0 12px 0px rgba(122, 132, 94, 1);
      transform: scale(1.1);
    }
    100% {
      box-shadow: 0 0 4px 0px rgba(122, 132, 94, 0.8);
      transform: scale(1);
    }
  }

  .status-dot {
    animation: pulse 1.5s infinite ease-in-out;
  }
</style>
